
location / {
index index.php index.html index.htm;
if (!-e $request_filename)
{
rewrite ^/(.*)$ /index.php?s=$1;
}
}

location /api/ {
index index.php index.html index.htm;
if (!-e $request_filename)
{
rewrite ^/api/(.*)$ /api.php?s=$1;
}
}

location ~* ^\/upload\/.+\.(html|php)$ {
return 404;
}

location ~* ^\/plugins\/.+\.(html|php)$ {
return 404;
}

location ~* ^\/themes\/.+\.(html|php)$ {
return 404;
}
